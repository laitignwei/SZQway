<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    android:background="@drawable/listview_bg"
    tools:context="com.example.administrator.qway.CheckActivity">
    <Button
        android:id="@+id/scan"
        android:text="扫描条形码盘点"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据类别"
            android:enabled="false"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:enabled="false"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货品编码"
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <TextView
            android:id="@+id/id"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="条码"
            android:textColor="#0d0d0d"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:enabled="false"
            />

        <TextView
            android:id="@+id/code"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="left"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称  "
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <TextView
            android:id="@+id/goods_name"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="left"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货品类别   "
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <TextView
            android:id="@+id/check_drawer"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="left"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物料来源   "
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <TextView
            android:id="@+id/check_auditor"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="left"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仓库             "
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <TextView
            android:id="@+id/check_warehouse"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="left"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库面库存"
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <TextView
            android:id="@+id/stock"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="left"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际库存"
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />

        <EditText
            android:id="@+id/current_stock"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="left"
            android:textSize="20dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bt_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/bt_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改"
        android:textSize="20dp"
        />
</LinearLayout>
