<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/listview_bg"
    tools:context="com.example.administrator.qway.DataActivity">
    <Button
        android:id="@+id/scan"
        android:text="扫描条形码插入"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据类别"
            android:enabled="false"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:enabled="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号"
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/number"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint=""
            android:enabled="false"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条码"
            android:textColor="#0d0d0d"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:enabled="false"
            />

        <EditText
            android:id="@+id/code"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="请输入条码"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/goods_name"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="请输入商品名称"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开单人"
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/drawer"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="请输入开单人"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核人"
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/auditor"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="请输入审核人"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拆卸仓库"
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/warehouse"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="请输入拆卸仓库"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库面库存"
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/stock"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="请输入库存"
            android:layout_marginLeft="21dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前库存"
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/current_stock"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="请输入当前库存"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="#0d0d0d"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/note"
            android:textColor="#0d0d0d"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="输入你的备注"
            android:layout_marginLeft="85dp"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/upload"
        android:text="上传"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
</LinearLayout>
